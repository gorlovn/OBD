OBDDetailsForm:

<OBDDetailsForm>:
    anchor_y: "top"
    BoxLayout:
        orientation: "vertical"
        height: "300dp"
        size_hint_y: None
        GridLayout:
            cols: 2
            row_default_height: "40dp"
            row_force_default: True
            spacing: "10dp"
            padding: "10dp"
            Label:
                text: "Speed (km/hr): "
            TextInput:
            Label:
                text: "RPM: "
            TextInput:
            Label:
                text: "Throttle Position %: "
            TextInput:
            Label:
                text: "Engine Coolant Temp: "
            TextInput:
            Label:
                text: "Run Time Since Engine Start: "
            TextInput:
        
        Button:
            size_hint_y: None
            height: "40dp"
            text: "Connect"
    
