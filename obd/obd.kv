#:import la kivy.adapters.listadapter
#:import ok __main__

OBDRoot:

<OBDRoot>:
    OBDDetailsForm:

<OBDDetailsForm>:
    anchor_x: "center"
    anchor_y: "center"
    Button:
        size_hint_y: None
        height: "40dp"
        size_hint_x: None
        width: "100dp"
        text: "Connect"
        on_press: root.connect()

<ItemListItem>:
    size_hint_y: None
    height: "75dp"
    canvas.before:
        Color:
            rgba: self.background
        Rectangle:
            pos: self.pos
            size: self.size    
            
    Label:
        text: root.item_name
    Label:
        text: root.item_value
            
<ItemList>:
    list_view: list_view
    button: button
    orientation: "vertical"
    ListView:
        id: list_view
        adapter: la.ListAdapter(data=[], cls=ok.ItemListItem, args_converter=root.obd_converter)
    Button:
        id: button
        size_hint_y: None
        height: "40dp"
        text: "Refresh"
        on_press: root.force_list_view_update()
